{
  "name": "aegora",
  "version": "1.0.0",
  "description": "Aegora - Decentralized Arbitration & Trust Marketplace",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:u2u": "hardhat run scripts/deploy.js --network u2u",
    "deploy:testnet": "hardhat run scripts/deploy.js --network u2uTestnet",
    "verify": "hardhat run scripts/verifyContracts.js --network u2u",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run dev",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "npm run compile && cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "subgraph:codegen": "cd subgraph && graph codegen",
    "subgraph:build": "cd subgraph && graph build",
    "subgraph:deploy": "cd subgraph && graph deploy --node https://api.thegraph.com/deploy/ aegora-subgraph"
  },
  "keywords": [
    "blockchain",
    "arbitration",
    "dispute-resolution",
    "escrow",
    "dao",
    "defi",
    "web3",
    "u2u"
  ],
  "author": "Aegora Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "hardhat": "^2.19.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "dotenv": "^16.3.1"
  }
}
